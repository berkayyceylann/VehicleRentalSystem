@using VehicleRentalSystem.Models
@model LoginModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
        }
        .container {
            width: 100%;
            max-width: 320px;
            margin: 50px auto;
            padding: 20px;
            background-color: #fff;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
        }
        h2 {
            text-align: center;
            color: #d9534f; 
        }
        .form-group {
            margin-bottom: 15px;
        }
        .form-group label {
            display: block;
            margin-bottom: 5px;
        }
        .form-group input, .form-group button {
            width: 100%;
            padding: 8px;
            margin-bottom: 10px;
            border: 1px solid #ddd;
            border-radius: 4px;
        }
        .form-group button {
            background-color: #d9534f;
            color: white;
            cursor: pointer;
            border: none;
        }
        .form-group button:hover {
            background-color: #c9302c; 
        }
    </style>
</head>
<body>

<div class="container">
    <h2>Login</h2>
    <form asp-controller="LoginRegister" asp-action="Login" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
        
        <div class="form-group">
            <label for="UserEmail">Email:</label>
            <input type="email" id="UserEmail" name="UserEmail" class="form-control" required />
        </div>
        
        <div class="form-group">
            <label for="UserPassword">Password:</label>
            <input type="password" id="UserPassword" name="UserPassword" class="form-control" required />
        </div>
        
        <div class="form-group">
            <button type="submit" class="btn">Login</button>
        </div>
    </form>
</div>

</body>
</html>
