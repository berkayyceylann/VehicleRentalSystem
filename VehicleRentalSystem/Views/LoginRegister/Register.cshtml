@using VehicleRentalSystem.Models
@using Microsoft.AspNetCore.Html
@model RegisterModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register</title>
    <style>
        body { font-family: Arial, sans-serif; background-color: #f4f4f4; margin: 0; padding: 0; }
        .container { width: 100%; max-width: 320px; margin: 50px auto; padding: 20px; background-color: #fff; box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); border-radius: 8px; }
        h2 { text-align: center; color: #5cb85c; /* A shade of green */ }
        .form-group { margin-bottom: 15px; }
        .form-group label, .form-group input, .form-group button { display: block; width: 100%; margin-bottom: 10px; }
        .form-group input { padding: 8px; border: 1px solid #ddd; border-radius: 4px; }
        .form-group button { padding: 10px; background-color: #5cb85c; /* A shade of green */ color: white; border: none; border-radius: 4px; cursor: pointer; }
        .form-group button:hover { background-color: #4cae4c; /* A darker shade of green */ }
    </style>
</head>
<body>

<div class="container">
    <h2>Register</h2>
    <form asp-controller="LoginRegister" asp-action="Register" method="post">
        <div asp-validation-summary="All" class="text-danger mb-3"></div>
        
        @RenderInputFormGroup("UserName", "User Name")
        @RenderInputFormGroup("UserEmail", "Email", "email")
        @RenderInputFormGroup("UserPassword", "Password", "password")
        @RenderInputFormGroup("UserCountry", "Country")
        @RenderInputFormGroup("UserCity", "City")

        <div class="form-group">
            <button type="submit">Register</button>
        </div>
    </form>
</div>

@functions {
    private static HtmlString RenderInputFormGroup(string fieldName, string label, string inputType = "text")
    {
        var stringBuilder = new System.Text.StringBuilder();
        stringBuilder.AppendFormat(@"<div class='form-group'>
                                        <label asp-for='{0}'>{1}:</label>
                                        <input asp-for='{0}' type='{2}' />
                                        <span asp-validation-for='{0}' class='text-danger'></span>
                                    </div>", fieldName, label, inputType);

        return new HtmlString(stringBuilder.ToString());
    }
}

</body>
</html>
